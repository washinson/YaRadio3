<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/passive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BA88EC">
    <FrameLayout
            android:id="@+id/rectangle"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_rectangle">
        <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_back_button" />
    </FrameLayout>
    <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@id/progressBar"
            >
        <View
                android:layout_centerInParent="true"
                android:id="@+id/info_center"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        <TextView
                android:gravity="center"
                android:id="@+id/name"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="Название произведения"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/info_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/artist"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#DBDBDB"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/info_center"
                android:text="Исполнитель"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
            android:layout_alignLeft="@id/album"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_story"
            android:layout_below="@+id/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    <ImageView
            android:id="@+id/settings"
            android:layout_alignRight="@id/album"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/rectangle"
            app:srcCompat="@drawable/ic_settings"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    <ImageView
            android:layout_above="@id/info"
            android:layout_below="@+id/settings"
            android:id="@+id/album"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <SeekBar
            android:max="100"
            android:progress="50"
            android:layout_above="@id/time"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_marginBottom="10dp"
            android:thumb="@drawable/ic_ellipse"
            android:theme="@style/CustomProgress"
            />
    <TextView
            android:textSize="15sp"
            android:layout_above="@id/panel"
            android:textColor="#ECECEC"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"/>
    <TextView
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_above="@id/panel"
            android:textColor="#ECECEC"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:id="@+id/panel"
            >
        <ImageView
                android:id="@+id/pause"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_pause_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />

        <ImageView
                android:id="@+id/forward"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/pause"
                app:srcCompat="@drawable/ic_forward" />
        <ImageView
                android:id="@+id/advanced"
                app:srcCompat="@drawable/ic_advanced"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/forward"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"/>
        <ImageView
                android:id="@+id/like"
                app:srcCompat="@drawable/ic_like_passive"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/pause"
                android:layout_marginRight="40dp"/>

        <ImageView
                android:id="@+id/dislike"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@id/like"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/ic_dislike_passive" />
    </RelativeLayout>
</RelativeLayout>