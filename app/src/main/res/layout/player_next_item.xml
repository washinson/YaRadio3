<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorTrackList"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:padding="2dp"
            app:srcCompat="@drawable/ic_album"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/track_cover"
            android:layout_weight="10"
            android:contentDescription="@string/track_cover"/>
    <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <RelativeLayout
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <View
                android:id="@+id/info_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
        <TextView
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/info_center"
                android:textColor="@android:color/white"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title" />
        <TextView
                android:id="@+id/artist"
                android:textColor="#999999"
                android:textSize="15sp"
                android:layout_below="@id/info_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>