<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/colorTrackList"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

    <ImageView
            android:padding="1dp"
            app:srcCompat="@drawable/ic_album"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/track_cover"
            android:layout_weight="6"
            android:contentDescription="@string/track_cover"/>
    <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <RelativeLayout
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <View
                android:id="@+id/info_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
        <TextView
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/info_center"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title" />
        <TextView
                android:id="@+id/artist"
                android:textColor="#69000000"
                android:textSize="15sp"
                android:layout_below="@id/info_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
            app:srcCompat="@drawable/ic_dislike_passive"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/track_dislike" android:layout_weight="4"
            android:contentDescription="@string/track_dislike"/>
    <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <ImageView
            app:srcCompat="@drawable/ic_like_passive"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp" android:id="@+id/track_like" android:layout_weight="4"
            android:contentDescription="@string/track_like"/>
    <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
</LinearLayout>