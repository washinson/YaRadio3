<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".PlayerActivity">

    <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/track_cover"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:id="@+id/track_label" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/track_cover"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center"/>

    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Wave"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            app:SpinKit_Color="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/track_label"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/track_settings" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.589"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="396dp"
            android:layout_height="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/track_label"
            android:gravity="center_vertical" android:id="@+id/linearLayout">
        <ImageButton
                android:id="@+id/track_pause"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:background="?android:selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/exo_controls_pause"/>

        <ImageButton
                android:id="@+id/track_next"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:background="?android:selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/exo_controls_next"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"/>

        <ImageButton
                android:id="@+id/track_dislike"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="?android:selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dislike"/>

        <ImageButton
                android:id="@+id/track_like"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:background="?android:selectableItemBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_like"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/track_settings" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/track_label" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_settings"/>
</androidx.constraintlayout.widget.ConstraintLayout>